<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			  xmlns:vm="using:AutoAuction.ViewModels"
			 x:DataType="vm:HomeViewModel"
             x:Class="AutoAuction.Views.HomeView">
	<Grid ShowGridLines="False">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="4*"/>
		</Grid.RowDefinitions>

		
		<StackPanel 
			Grid.Column="1"
			Grid.Row="0"
			Grid.RowSpan="2"
			VerticalAlignment="Center" 
			HorizontalAlignment="Center">
				<Button Content="User Profile"/>
				<Button Content="Create Auction"/>
				<Button Content="Search Auctions"/>
		</StackPanel>

		<Label VerticalAlignment="Center" Content="Your Auctions"/>
		<DataGrid Grid.Row="1" ItemsSource="{Binding busesObservable}" AutoGenerateColumns="True" GridLinesVisibility="All"/>
		<Label Grid.Row="2" VerticalAlignment="Center" Content="Your Bids"/>
		<DataGrid Grid.Row="3" ItemsSource="{Binding busesObservable}" AutoGenerateColumns="True" GridLinesVisibility="All"/>

	</Grid>
</UserControl>
