<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			  xmlns:vm="using:AutoAuction.ViewModels"
			 x:DataType="vm:UserCreationViewModel"
             x:Class="AutoAuction.Views.UserCreationView">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<!--TODO: Insert postcode field-->
		<Label>Create user</Label>
		<TextBox Watermark="Username" Margin="0, 5, 0, 5" Text="{Binding User.UserName}"/>
		<TextBox Watermark="Password" Margin="0, 5, 0, 5" Text="{Binding User.Password}"/>
		<TextBox Watermark="Password (again)" Margin="0, 5, 0, 5" Text="{Binding RePassword}"/>
		<TextBox Watermark="CPR/CVR" Margin="0, 5, 0, 5" Text="{Binding CVPR}"/>
		<WrapPanel Margin="0, 5, 0, 5">
			<RadioButton GroupName="AccType" IsChecked="{Binding IsPrivate}">Private</RadioButton>
			<RadioButton GroupName="AccType" IsChecked="{Binding IsCorporate}">Corporate</RadioButton>
		</WrapPanel>
		<WrapPanel>
			<Button Command="{Binding Cancel}" Content="Cancel"/>
			<Button Command="{Binding CreateUser}" Content="Create"/>
		</WrapPanel>
	</StackPanel>
</UserControl>
